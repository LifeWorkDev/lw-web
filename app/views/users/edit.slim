- content_for :title, 'Your Profile'

h2.text-center.mt-2
  | Welcome, #{current_user.name}!
  br
  | Tell us a little about you

.container
  = bootstrap_form_with(model: current_user) do |f|
    = f.time_zone_select :time_zone, ActiveSupport::TimeZone.basic_us_zones, { disabled: '', prompt: 'Please select', required: true, selected: current_user.time_zone || '' }, { control_class: 'custom-select', required: true }
    .form-group.mb-0
      label.required What kinds of freelance work do you do?
    .list-group.mb-4.font-sans-serif
      - ['Accounting & Consulting', 'Admin Support', 'Customer Service', 'Data Science & Analytics', 'Design & Creative', 'Engineering & Architecture', 'IT & Networking', 'Legal', 'Sales & Marketing', 'Translation', 'Web, Mobile & Software Dev', 'Writing'].each_with_index do |choice, index|
        - name = "choice#{index}"
        = check_box_tag name
        label.list-group-item for=name = choice
    .form-group.mb-0
      label.required What type of freelancer are you?
    .list-group.mb-4.font-sans-serif
      = radio_button_tag 'test', '5'
      label.list-group-item for='test_5' Part-Time
      = radio_button_tag 'test', '6'
      label.list-group-item for='test_6' Full-Time
      = radio_button_tag 'test', '4'
      label.list-group-item for='test_4' Team Leader
    = render 'shared/form_buttons', f: f
      
  
