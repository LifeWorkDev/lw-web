<% import_path = "#{Gem.loaded_specs['bootstrap-email'].full_gem_path}/core" %>
$font-size-base: 16px;
$headings-margin-bottom: $font-size-base / 2;
$headings-ratios: (1: 2.5, 2: 2, 3: 1.25, 4: 1.5, 5: 1.25, 6: 1);
$lead-font-size: $font-size-base * 1.25;
$lead-font-weight: 300;
$paragraph-margin-bottom: $font-size-base;
@import 'fonts';
@import 'bootstrap-variables';

// Vars referencing existing bootstrap vars must
// go in this block and have the !global flag
// https://stackoverflow.com/a/38225564/337446
%scope {
  @import '<%= import_path %>/sass/variables';

  $badge-border-radius: $border-radius !global;
}

// Needs to be imported after the above scope block
@import '<%= import_path %>/bootstrap-email';
@import 'bootstrap-overrides';

.btn td a {
  vertical-align: text-top; // vertically align text w/in button
}

.container,
.container-fluid {
  // Don't apply this to body since container is fixed-width
  background-color: $theme-background;
}

.lead {
  font-size: $lead-font-size;
  font-weight: $lead-font-weight;
}
